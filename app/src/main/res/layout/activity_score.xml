<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.animalquizgame.viewmodels.ScoreViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/themeblack"
        android:id="@+id/rootLayout"
        tools:context=".ScoreActivity">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="0dp"
            android:id="@+id/upLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/midLayout"
            app:layout_constraintVertical_weight="2"
            >
            <com.example.animalquizgame.utlis.uiUtils.textViews.StatusTextView
                android:id="@+id/textViewStats"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="17dp"
                android:fontFamily="@font/rubik_mono_one"
                android:gravity="center"
                android:shadowColor="@color/themeblue"
                android:shadowDx="12"
                android:shadowDy="5"
                android:shadowRadius="1"
                android:text="GREAT"
                android:textColor="@color/themewhite"
                android:textSize="45sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toTopOf="@id/textViewScore"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_weight="1.7" />

            <TextView
                android:id="@+id/textViewScore"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="17dp"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:textColor="@color/themewhite"
                android:textSize="30sp"
                android:text="11/15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewStats"
                app:layout_constraintVertical_weight="1.3"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/midLayout"
            app:layout_constraintTop_toBottomOf="@id/upLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/downLayout"
            app:layout_constraintVertical_weight="7"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgViewPic"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/textViewFinalScore"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:scaleType="centerCrop"
                app:civ_border_color="@color/themeblue"
                app:civ_border_width="4dp"
                android:src="@android:color/transparent"
                app:layout_constraintVertical_weight="3"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgViewPicActual"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="15dp"
                app:layout_constraintTop_toTopOf="@id/imgViewPic"
                app:layout_constraintEnd_toEndOf="@id/imgViewPic"
                app:layout_constraintBottom_toBottomOf="@id/imgViewPic"
                app:layout_constraintStart_toStartOf="@id/imgViewPic"
                android:scaleType="centerCrop"
                android:src="@color/themewhite"
                />
            <TextView
                android:id="@+id/textViewFinalScore"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="Score: 20000"
                android:textColor="@color/themewhite"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/imgViewPic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_weight="1"/>
            <com.example.animalquizgame.utlis.uiUtils.textViews.HighlightedTextView
                android:id="@+id/textViewBestScore"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="NEW BEST SCORE!"
                android:textColor="@color/themeblue"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/imgViewPic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_weight="1"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/downLayout"
            app:layout_constraintTop_toBottomOf="@id/midLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_weight="3"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"
                android:text="Menu"
                android:textSize="16sp"
                app:strokeColor="@color/themeblue"
                android:backgroundTint="@color/themeblack"
                app:strokeWidth="2dp"
                android:textColor="@color/themewhite"
                app:layout_constraintEnd_toStartOf="@id/buttonNewGame"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonNewGame"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="10dp"
                android:text="New Game"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/buttonMenu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/buttonMenu"
                app:layout_constraintStart_toEndOf="@id/buttonMenu"
                android:textColor="@color/themewhite"
                app:strokeColor="@color/themeblue"
                android:backgroundTint="@color/themeblack"
                app:strokeWidth="2dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
